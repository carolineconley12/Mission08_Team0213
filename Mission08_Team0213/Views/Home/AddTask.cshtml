@{
}

@model Tasks

<h1>Add a Task</h1>

<form method="post">
    <input type="hidden" asp-for="TaskId" />

    <br />
    <label asp-for="Task">Task:</label>
    <input asp-for="Task" />
    <br />
    <br />
    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" type="date"/>
    <br />
    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant" id="Quadrant">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <br />
    <label asp-for="Category">Category:</label>
    <select asp-for="Category" id="Category">
        <option value="Home">Home</option>
        <option value="School">School</option>
        <option value="Work">Work</option>
        <option value="Church">Church</option>
    </select>
    <br />
    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="none" selected disabled hidden></option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <button type="submit">Add Task</button>

    <div asp-validation-summary="All"></div>
</form>